<Page class="page">
    <ActionBar title="Payment" class="action-bar"></ActionBar>
    <StackLayout id="form" orientation="vertical">
        <Image src="~/images/logo.png" />

        <Label class="h1" textWrap="true" text="Ristorante La Contessa"/>
        <Label class="h3" textWrap="true" text="Eingecheckt am Tisch 11 -- 20 EURO"/>


        <Button class="btn btn-primary" text="Paypal"
            tap="onPaypalTap" />
        <Button class="btn btn-primary" text="Google Pay"
            tap="onGoogleTap" />
        <Button class="btn btn-primary" text="Apple Pay" tap="onAppleTap"/>

    </StackLayout>
</Page>
