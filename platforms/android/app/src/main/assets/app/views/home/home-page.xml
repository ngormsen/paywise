<Page loaded = "loaded" class = "page">
     <StackLayout id="form" orientation="vertical">
            <Label text = "Welcome to Paywise!" class = "header"/>
            <Image src="~/paywise_logo.png" />

            <TextField class = "full-width" id="email" text="{{ email }}"
                hint="Email Address" keyboardType="email" autocorrect="false"
                autocapitalizationType="none" />
            <TextField class="full-width" secure="true" id = "password"
                hint="Password" />

            <Button class="ghost-round full-width" text="Login" id = "Login"
                tap="LogIn" />
            
            <Button text="Guest" class="transparent_btn" tap="guest" id = "guest"/>
            <Button text="Facebook" class="spacing full-width" tap="FacebookLogin"  />  

            <Button text="Sign Up"  tap="Register" id = "Register"
                class="transparent_btn" />
            <Button text="Forgot your password?" class="transparent_btn" tap="resetPassword"  />  

                
    </StackLayout>
</Page>

  

