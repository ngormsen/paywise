<Page loaded = "loaded" class = "page">
    <ActionBar title="Login" class="action-bar"></ActionBar>
     <FlexboxLayout>
        <StackLayout id="form" orientation="vertical">

            <TextField class="input input-border" id="email" text = "{{email}}"
                hint="Email Address" keyboardType="email" autocorrect="false"
                autocapitalizationType="none" />
            <TextField class="input input-border" secure="true" text="password" id = "password"
                hint="Password" />

            <Button class="btn btn-primary" text="Login" id = "Login"
                tap="LogIn" />
            <Button text="signUp" class="btn btn-primary" tap="signIn" id = "signIn"
                class="link" />
            <Button text="sign out" class="btn btn-primary" tap="SignOut" id = "signOut"
                class="link" />
        </StackLayout>
    </FlexboxLayout>
</Page>

  

