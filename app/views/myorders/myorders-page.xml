<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:sd="nativescript-ui-sidedrawer" xmlns:comps="components" xmlns:lv="nativescript-ui-listview">
    <ActionBar title="Meine Bestellungen" class="actionbar" >
        <NavigationButton visibility="hidden"></NavigationButton>
    </ActionBar>
    <sd:RadSideDrawer id="sideDrawer">


        <sd:RadSideDrawer.drawerContent>
            <comps:sidedrawer />
        </sd:RadSideDrawer.drawerContent>

        <sd:RadSideDrawer.mainContent>
          
            <!-- <StackLayout id="from" class="qrcodebackground"> -->
            <StackLayout id="from">

                <Button class="buttonprimary" text="Zurück zum Tisch" tap="onOrdersTap" height="7%" />
                <!-- <Button class="buttonprimarybit" text="test" tap="tipTap" height = "5%"/>--> -->
                <!--Bottom Area Tip + Payment -->


                <!--Content Area-->

                <!-- <StackLayout class="myordercontent" height="40%"> -->
                <StackLayout  rows="*" class= "myordercontent" height="30%">
                    <ListView height="100%" items="{{ myItems }}">
                        <!--Describing how the element will look like-->
                        <ListView.itemTemplate>

                            <GridLayout columns="250, 100, auto">
                                <Label text="{{ name }}" col="0" />
                                <Label text="{{ prize }}" col="1" />
                                <Image class="handback" src="~/images/remove.png" id="{{ name }}" tap="onTap" col="2" />

                                <!--The TextField has a different bindingCotnext from the ListView, but has to use its properties. Thus the parents['ListView'] has to be used.-->
                                <!-- Parent binding to a string property -->
                                <!-- <TextField text="{{ $parents['ListView'].test, $parents['ListView'].test }}" col="1"/> -->

                                <!-- Parent binding to a method onTap -->
                                <!-- <Button text="Tap me" tap="{{ $parents['ListView'].onTap,  $parents['ListView'].onTap }}" /> -->

                            </GridLayout>
                        </ListView.itemTemplate>
                    </ListView>
                </StackLayout>




                <GridLayout columns="185 *" height="7%">
                    <Label class="sumup" text="Gesamtbetrag Bestellungen: " col="0" />
                    <Label class="sumup" text="{{ sum }}" col="1" />
                </GridLayout>

                <!--Slider-->
            
                <GridLayout class="m-15" rows="auto auto" columns="*">
                    <!-- <Label row="1" col="0" text="{{ firstMinValue }}" textWrap="true" fontSize="15" class="icon" /> -->
                    <Slider row="1" col="0" value="{{ sliderValue }}" minValue="{{ firstMinValue }}"
                        maxValue="{{ firstMaxValue }}" />
                    <!-- <Label row="1" col="2" text="{{ firstMaxValue }}" textWrap="true" fontSize="20" class="icon" /> -->
                </GridLayout>
                <GridLayout class="m-15" rows="auto auto" columns="auto, auto,auto,auto,auto">
                    <Label row="0" col="0" class="h2 p-8" text="Tip:" textWrap="true" />

                    <Label row="0" col="1" class="h2 p-8" text="{{ currentValue }}" textWrap="true" />
                    <Label row="0" col="2" class="h2 p-8" text="%" textWrap="true" />
                    <Label row="0" col="3" class="h2 p-8" text="{{ tipValue }}" textWrap="true" />
                    <Label row="0" col="4" class="h2 p-8" text="EUR." textWrap="true" />
                </GridLayout>


                <GridLayout columns="*" height="8%">
                    <Button class="buttonprimarybit" text="Trinkgeld Bestätigen" tap="tipTap" col="0" />-->
                    <!-- <TextField id="tipField" text="{{ tipField }}" hint="Trinkgeld" col="1" /> -->
                </GridLayout>

                <Button class="buttonsecondary" text="Bezahlen" tap="onPayTap" />

            </StackLayout>



        </sd:RadSideDrawer.mainContent>


    </sd:RadSideDrawer>

</Page>