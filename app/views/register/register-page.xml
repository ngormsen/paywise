<Page loaded = "loaded" actionBarHidden="false" class="qrcodebackground">
    <ActionBar title="Account erstellen" class="actionbar"></ActionBar>
        <StackLayout id="form" orientation="vertical">
            
            <Image src="~/paywise_logo.png" />
            <TextField class = "input-fields input-line" id="name" hint="Name" 
                autocorrect="false" />
            <TextField class = "input-fields input-line" id="email"
                hint="Email Adresse" keyboardType="email" autocorrect="false"
                autocapitalizationType="none" />
            <TextField class="input-fields input-line" secure="true" id = "password"
                hint="Passwort" />
            <TextField class="input-fields input-line" secure="true" id = "password2"
                hint="Passwort wiederholen" />
            <StackLayout orientation="horizontal" class="gtc">
                <Switch checked="false" id="check" class="m-15" row="1" col="1"></Switch>
                <Label text="Ich bin mit den Nutzungsbedingungen und der DatenschutzerklÃ¤rung einverstanden." 
                    textWrap="true" />
            </StackLayout>   

            <Button class="ghost-round input-fields" text="Registrieren" id = "Register"
                tap="Register" />
    </StackLayout>
</Page>

  

