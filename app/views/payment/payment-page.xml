<Page class="page" loaded="onPageLoaded" xmlns:sd="nativescript-ui-sidedrawer" xmlns:comps="components">
    <sd:RadSideDrawer id="sideDrawer">

        <sd:RadSideDrawer.drawerContent>
            <comps:sidedrawer />
        </sd:RadSideDrawer.drawerContent>
        <sd:RadSideDrawer.mainContent>

            <ActionBar title="Payment" class="action-bar"></ActionBar>
            <StackLayout id="form" orientation="vertical">

                <Label class="h1" textWrap="true" text="Ristorante La Contessa" />
                <Label class="h3" textWrap="true" text="{{ sum, sum }}" />


                <Button class="btn btn-primary" text="Paypal" tap="onPaypalTap" />
                <Button class="btn btn-primary" text="Google Pay" tap="onGoogleTap" />
                <Button class="btn btn-primary" text="Apple Pay" tap="onAppleTap" />

            </StackLayout>
        </sd:RadSideDrawer.mainContent>

    </sd:RadSideDrawer>
</Page>