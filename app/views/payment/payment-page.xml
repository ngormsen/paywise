<Page xmlns="http://www.nativescript.org/tns.xsd" actionBarHidden ="false" class="qrcodebackground"
    loaded="onPageLoaded" xmlns:sd="nativescript-ui-sidedrawer" xmlns:comps="components">

    <ActionBar title="Bezahlung" class="actionbar" ></ActionBar>
    <sd:RadSideDrawer id="sideDrawer">


        <sd:RadSideDrawer.drawerContent>
             <comps:sidedrawer />
        </sd:RadSideDrawer.drawerContent>

        <sd:RadSideDrawer.mainContent>

            <StackLayout >


                <!--iOS>
        <ContentView height="240" width="240">
            <Barcode:BarcodeScannerView></Barcode:BarcodeScannerView>
        </ContentView>
        </iOS-->
                <!-- <button text="Punkte einlösen" class="buttonprimarybit" height = "10%"/> -->
                <GridLayout class="payment" rows="auto auto auto" columns="*">
                    <Label row="0" col="0"  class="h1" text="{{ restaurant }}" textWrap="true" />
                    <Label row="1" col="0"  text="{{ sum }}" textWrap="true" />
                    <Label row="2" col="0"  text="{{ points }}" textWrap="true" />
                </GridLayout>

                <Button class="buttonprimary" text="Punkte einlösen" id = "LogIn"
                                tap="onPoints" />
                <image src="~/images/Paypal-icon.png" tap="onPaypalTap" class="qrcodepic" />
            
            </StackLayout>
        </sd:RadSideDrawer.mainContent>

    </sd:RadSideDrawer>


</Page>