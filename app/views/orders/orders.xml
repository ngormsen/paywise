<Page class="page" loaded="pageLoaded">
    
    <ActionBar title="Meine Bestellungen" class="action-bar"></ActionBar>
    
    <StackLayout id="form" orientation="vertical">
        <Button class="btn btn-primary" text='Rechnung anfordern' tap="onOrderTap" />
        <Button class="btn btn-primary" text="Zurück zur Übersicht" tap="onTap"/>
        <GridLayout rows="*" >
          <ListView items="{{ orders }}" id="listView" loaded="{{ onListViewLoaded }}" >
            <!--Describing how the element will look like-->
              <ListView.itemTemplate>
                <GridLayout columns="200, auto, auto">
                    <Label text="{{ name }}" class="orderGrid" col="0"/>
                    <Label text="{{ prize }}" class="orderGrid" col="1"/>
                    <Button text="Pick" class="btn btn-primary" col="2"/>
                    <!--The TextField has a different bindingCotnext from the ListView, but has to use its properties. Thus the parents['ListView'] has to be used.-->
                    <!-- <TextField text="{{ $parents['ListView'].prize, $parents['ListView'].prize }}" col="1"/> -->
                </GridLayout>
              </ListView.itemTemplate>
          </ListView>
        </GridLayout>

    </StackLayout>
</Page>

