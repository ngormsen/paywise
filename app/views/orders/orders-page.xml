<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:sd="nativescript-ui-sidedrawer" xmlns:comps="components">

    <ActionBar title="Tisch" class="actionbar"></ActionBar>
    <sd:RadSideDrawer id="sideDrawer">

        <sd:RadSideDrawer.drawerContent>
            <comps:sidedrawer />
        </sd:RadSideDrawer.drawerContent>

        <sd:RadSideDrawer.mainContent>

            <StackLayout id="form" orientation="vertical">

                <Button class="buttonprimary" text="Meine Bestellungen anzeigen" tap="onMyOrdersTap" />

                <StackLayout rows="*" class= "myordercontent" height = "40%">
                    <ListView height = "100%" items="{{ myItems }}">
                        <ListView.itemTemplate>
                            <GridLayout columns="250, 50, auto, auto" >
                                <Label text="{{ name }}"  col="0" />
                                <Label text="{{ prize }}"  col="1" />
                                <Image src ="~/images/split.png" tap= "splitItem" col ="2" id = "{{name}}" class ="pickButton"/>
                                <Image src ="~/images/shopping_cart.png" tap= "onTap" col ="3" id = "{{name}}" class ="pickButton"/>
                            </GridLayout>
                        </ListView.itemTemplate>
                    </ListView>
                </StackLayout>

                <Label text="{{ sum }}" height="10%"/>
            
            <Label  text="Hier siehst du alles, was an deinem Tisch bestellt wurde. Wähle deine Bestellungen aus und sie werden in deinen persönlichen Warenkorb übertragen." class = "ordersText" textWrap = "true"/>
            <Image src ="~/images/table.png" class ="tableicon"/>

        </StackLayout>
        </sd:RadSideDrawer.mainContent>

    </sd:RadSideDrawer>

</Page>