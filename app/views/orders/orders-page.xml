<Page class="content" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:sd="nativescript-ui-sidedrawer" xmlns:comps="components">

    <ActionBar title="Tisch" class="action-bar"></ActionBar>
    <sd:RadSideDrawer id="sideDrawer">


        <sd:RadSideDrawer.drawerContent>
            <comps:sidedrawer />
        </sd:RadSideDrawer.drawerContent>

        <sd:RadSideDrawer.mainContent>

            <StackLayout id="form">
            <!-- Button can not be on the bottom atm because the list has * rows -->

            <Label  text="Hier siehst du alle Bestellungen die an deinem Tisch vorgenommen wurden. Wähle deine Bestellungen aus und sie werden in deine persönlichen Bestellungen übertragen." class = "ordersText" textWrap = "true"/>
            <Image src ="~/images/table.png" class ="tableicon"/>
            
           
                

                <StackLayout rows="*" class=  "tableorders" >
                    <ListView items="{{ myItems }}">
                        <!--Describing how the element will look like-->
                        <ListView.itemTemplate>
                            <GridLayout columns="180, 100, auto" >
                                <Label text="{{ name }}" class="h2" col="0" />
                                <Label text="{{ prize }}" class="h2" col="1" />
                                <Image src ="~/images/shopping_cart.png" tap= "onTap" col ="2" id = "{{name}}" class ="pickButton"/>
    
                            
                                <!--The TextField has a different bindingCotnext from the ListView, but has to use its properties. Thus the parents['ListView'] has to be used.-->
                                <!-- Parent binding to a string property -->
                                <!-- <TextField text="{{ $parents['ListView'].test, $parents['ListView'].test }}" col="1"/> -->

                                <!-- Parent binding to a method onTap -->
                                <!-- <Button text="Tap me" tap="{{ $parents['ListView'].onTap,  $parents['ListView'].onTap }}" /> -->

                            </GridLayout>
                        </ListView.itemTemplate>
                    </ListView>
                </StackLayout>
            

                 <Button class="myOrdersButton" text="Meine Bestellungen" tap="onMyOrdersTap" />
            

        </StackLayout>
        </sd:RadSideDrawer.mainContent>

    </sd:RadSideDrawer>

</Page>