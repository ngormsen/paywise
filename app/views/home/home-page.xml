<Page loaded = "loaded" actionBarHidden="true" class="qrcodebackground">
    <ActionBar title="Login" class="action-bar">
    <NavigationButton visibility="hidden" ></NavigationButton>
    </ActionBar>
        <StackLayout id="form" orientation="vertical">
            <Image class="login_logo" src="~/images/paywise_write.png" />

            <TextField class = "input-line" id="email" text="{{ email }}"
                hint="Email Addresse" keyboardType="email" autocorrect="false"
                autocapitalizationType="none" />
            <TextField class="input-line" secure="true" id = "password"
                hint="Passwort" />

            <Button class="ghost-round input-fields" text="Log in" id = "LogIn"
                tap="LogIn" />
            <Label text="Passwort vergessen?"  tap="resetPassword" class="labelForgotpw"/> 
            
            <button text="Gast?" class="labelForgotpw" tap="guest" id="guest"/>

            <Label text="DonÂ´t have an account? Create one"  tap="navToRegister" id = "Register" class ="labelsignup"/>

    </StackLayout>
</Page>

  

