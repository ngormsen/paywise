<Page loaded = "loaded" actionBarHidden="true" class="qrcodebackground">
    <ActionBar title="Login" class="action-bar"></ActionBar>
        <StackLayout id="form" orientation="vertical">
            <Image src="~/paywise_logo.png" />

            <TextField class = "input-fields input-line" id="email" text="{{ email }}"
                hint="Email Address" keyboardType="email" autocorrect="false"
                autocapitalizationType="none" />
            <TextField class="input-fields input-line" secure="true" id = "password"
                hint="Password" />

            <Button class="ghost-round input-fields" text="Log in" id = "LogIn"
                tap="LogIn" />
            <Label text="Forgot password?"  tap="resetPassword" class = "labelForgotpw"/> 
            
            <Button text="Guest" class="transparent_btn" tap="guest" id = "guest"/>

            <Label text="DonÂ´t have an account? Create one"  tap="navToRegister" id = "Register" class ="labelsignup"/>

    </StackLayout>
</Page>

  

