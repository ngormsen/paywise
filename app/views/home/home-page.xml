<Page loaded = "loaded" class = "page">
     <StackLayout id="form" orientation="vertical">
            <Label text = "Welcome to Paywise!" orientation = "center"/>
            <Image src="~/paywise_logo.png" />

            <TextField class = "full-width" id="email" text="{{ email }}"
                hint="Email Address" keyboardType="email" autocorrect="false"
                autocapitalizationType="none" />
            <TextField class="full-width" secure="true" id = "password"
                hint="Password" />

            <Button class="ghost-round" text="Login" id = "Login"
                tap="LogIn" />
            
            <Button text="Guest" class="ghost-round" tap="guest" id = "guest"/>

            <Button text="Create a new Account"  tap="Register" id = "Register"
                class="spacing" />
            <Button text="Forgot your password?" class="spacing" tap="resetPassword"  />  
                
    </StackLayout>
</Page>

  

