<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:sd="nativescript-ui-sidedrawer" loaded="pageLoaded">

<ActionBar title="HauptmenÃ¼">
  <android>
    <NavigationButton  tap="toggleDrawer" />
  </android>
  <ios>
    <ActionItem ios.position="left" tap="toggleDrawer" />
  </ios>
</ActionBar>

    <sd:RadSideDrawer id="sideDrawer">

        <!-- side drawer content -->
        <sd:RadSideDrawer.drawerContent>
            <StackLayout class="sidedrawer-left">
                <StackLayout class="sidedrawer-header">
                    <Label text="Hello RadSideDrawer!" class="sidedrawer-header-brand" />
                </StackLayout>
                <StackLayout class="sidedrawer-content">
                    <Label text="Home" class="sidedrawer-list-item-text" />
                            <Button class="btn btn-primary" text="Am tisch einchecken" tap="onTap" />
                    <Button class="btn btn-primary" text="Bestellungen anzeigen" tap="onOrdersTap" />
                    <Button class="btn btn-primary" text="Meine Bestellungen anzeigen" tap="onMyOrdersTap" />
                    <Button class="btn btn-primary" text="Bezahlen" tap="onPayTap" />  
                    <Button text="sign out" class="btn btn-primary" tap="SignOut" id = "signOut" />
                </StackLayout>
            </StackLayout>
        </sd:RadSideDrawer.drawerContent>

        <!-- The main content -->
        <sd:RadSideDrawer.mainContent>
            <StackLayout class="stackback">
            
            </StackLayout>
        </sd:RadSideDrawer.mainContent>

    </sd:RadSideDrawer>
</Page>