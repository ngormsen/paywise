<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:sd="nativescript-ui-sidedrawer" loaded="pageLoaded">

<ActionBar title="Zuhause" class="actionbar">
    <ActionItem tap="toggleDrawer" ios.systemIcon="4" android.systemIcon="ic_menu_btn_add" ios.position="left" />
</ActionBar>

    <sd:RadSideDrawer id="sideDrawer">

        <!-- side drawer content -->
        <sd:RadSideDrawer.drawerContent>
            <StackLayout class="sidedrawer-left">
                <StackLayout class="radsideheader">
                    <Label text="Hello RadSideDrawer!" class="radsidebody" />
                </StackLayout>
                <StackLayout class="radsidebody">
                    <Button text="Home" class="radsidebutton" />
                    <Button class="radsidebutton" text="Am tisch einchecken" tap="onTap" />
                    <Button class="radsidebutton" text="Bestellungen anzeigen" tap="onOrdersTap" />
                    <Button class="radsidebutton" text="Meine Bestellungen anzeigen" tap="onMyOrdersTap" />
                    <Button class="radsidebutton" text="Bezahlen" tap="onPayTap" />  
                    <Button text="sign out" class="radsidebutton" tap="SignOut" id = "signOut" />
                </StackLayout>
            </StackLayout>
        </sd:RadSideDrawer.drawerContent>

        <!-- The main content -->
        <sd:RadSideDrawer.mainContent>
            <StackLayout class="content">
            
            </StackLayout>
        </sd:RadSideDrawer.mainContent>

    </sd:RadSideDrawer>
</Page>